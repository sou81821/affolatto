<!DOCTYPE html>
<html>
<head>
  <title>Affollato</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>

  <script src="//maps.google.com/maps/api/js?key=AIzaSyDk2OCKu47cMQsQdXJCSveDNFU4fb1EMjk"></script>
  <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
  <script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
  <meta charset="utf-8">

</head>
<body>
<header class="header">
  <div id="menu-box">
    <div id="toggle">
      <a href="#"></a>
    </div>
    <div id="header-left">
      <a href="/">affollato</a>
    </div>
    <% if user_signed_in? %>
      <div id="profile-image">
        <% if current_user.provider == "facebook" %>
          <% if current_user.avatar.blank? %>
            <%= link_to image_tag(current_user.fb_avatar, {:alt => 'プロフィール'}), edit_user_registration_path %>
          <% else %>
            <%= link_to image_tag(current_user.avatar, {:alt => 'プロフィール'}), edit_user_registration_path %>
          <% end %>
        <% else %>
          <% if current_user.avatar.blank? %>
            <%= link_to image_tag('no_image.jpg', {:alt => 'プロフィール'}), edit_user_registration_path %>
          <% else %>
            <%= link_to image_tag(current_user.avatar, {:alt => 'プロフィール'}), edit_user_registration_path %>
          <% end %>
        <% end %>
      </div>
    <% end %>
    <!-- 地図の検索フォーム -->
    <div id="header-center">
      <form>
        <div class="area_search clearfix">
          <input type="text" id="search_address", placeholder="検索エリア">
          <input type="button" value="検索" id="search_button">
        </div>
      </form>
    </div>
    <div id="header-right">
      <ul id="menu" class="">
        <% if user_signed_in? %>
          <li><%= link_to 'ホーム', '/' %></li>
          <li><%= link_to '投稿履歴', "/users/#{current_user.id}" %></li>
          <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete %></li>
        <% else %>
          <li><%= link_to '新規登録', new_user_registration_path %></li>
          <li><%= link_to 'ログイン', new_user_session_path %></li>
        <% end %>
      </ul>
    </div>
  </div>
</header>

<%= yield %>

<footer>
  <p>Copyright Affollato 2016.</p>
</footer>

</body>
</html>
