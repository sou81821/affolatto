<!-- 地図の検索フォーム -->
<form>
  <div class="area_search clearfix">
    <input type="text" id="search_address", placeholder="検索エリア">
    <input type="button" value="検索" id="search_button">
  </div>
</form>

<div class="explain">
  <p><%= image_tag("marker-red.png") %> ... 混んでる <%= image_tag("marker-green.png") %> ... 空いてる</p>
</div>

<!-- マップ -->
<div class="gmap_outside">
  <div class="gmap_inside" id="map"></div>
</div>

<script type="text/javascript">
  if(navigator.geolocation) {
    // 現在地の取得
    navigator.geolocation.getCurrentPosition(successFunc, errorFunc, optionObj);
  }

  // handler = Gmaps.build('Google');
