<div class="area_search">
  <form>
    <input type="text" id="search_address">
    <input type="button" value="地図検索" id="search_button">
  </form>
</div>

<div style='width: 800px; margin: 0 auto;'>
  <div id="map" style='width: 800px; height: 400px;'></div>
</div>

<script type="text/javascript">
    handler = Gmaps.build('Google');
    handler.buildMap(
      {
        provider: {
          zoom: 16,
          center: new google.maps.LatLng(34.6945, 135.195)
        },
        internal: {id: 'map'}
      },
      function(){
        markers = handler.addMarkers(<%=raw @hash.to_json %>);
        handler.bounds.extendWith(markers);
        // handler.fitMapToBounds();
      }
    );

    // 検索ボックスに入力された地域に移動
    $('#search_button').on('click', function(){
      var search_address = $("#search_address").val()
      var geocoder = new google.maps.Geocoder();
      geocoder.geocode(
        {
          "address": search_address,
          "region": "jp"
        },
        function(results,status){
          if(status==google.maps.GeocoderStatus.OK){
            // console.log(results[0].geometry.location.lat());
            handler.buildMap(
              {
                provider: {
                  zoom: 16,
                  center: new google.maps.LatLng(results[0].geometry.location.lat(), results[0].geometry.location.lng())
                },
                internal: {id: 'map'}
              },
              function(){
                markers = handler.addMarkers(<%=raw @hash.to_json %>);
                handler.bounds.extendWith(markers);
                // handler.fitMapToBounds();
              }
            );
          }
        }
      );
    });

    <% if user_signed_in? %>
      // クリックした地点の座標にマーカーを設置
      handler.getMap().addListener('click', function(event){
        <% infowindow = render "tweet", locals: { tweet: @tweet } %>
        marker = handler.addMarkers([
          {
            "lat": event.latLng.lat(),
            "lng": event.latLng.lng(),
            "infowindow": <%=raw infowindow.to_json %>
          }
        ]);
        handler.bounds.extendWith(marker);
        //handler.fitMapToBounds();

        //(1)マーカーをjQueryで取得して，triggerでclickする
        //(2)マーカーにaddListenerでclickされた場合のイベントを追加
        // marker.addListener('click', function(){
        google.maps.event.addListener(marker, 'click', function(){
          console.log($('#submit'));
          console.log($('#js_latitude'));
          $('#js_latitude').attr('value', event.latLng.lat());
          $('#js_longitude').attr('value', event.latLng.lng());
        });
      });
    <% end %>

</script>
